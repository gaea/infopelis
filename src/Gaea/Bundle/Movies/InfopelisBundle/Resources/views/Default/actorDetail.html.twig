{% extends '::base.html.twig' %}

{% block title %}
    InfoPelis
{% endblock %}
  
{% block stylesheets %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 col-sm-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title text-center">{{ info.name }}</h3>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-sm-3">
								<center>
									{% if info.profile_path != '' %}
										<div class="img-thumbnail pull-right">
											<img src="https://image.tmdb.org/t/p/w150/{{ info.profile_path }}" alt="{{ info.name }}" class="img-responsive"/>
										</div>
									{% else %}
										<div class="img-thumbnail thumbnail-actor pull-right col-middle">
											<img src="{{ asset('bundles/gaeamoviesinfopelis/images/no-user-image.jpg') }}" alt="{{ info.name }}" class="img-responsive img-no-actor"/>
										</div>
									{% endif %}
								</center>
							</div>
							<div class="col-sm-9">
								<dl class="dl-horizontal">
									<dt>Place of birth</dt>
									<dd>{{ info.place_of_birth }}</dd>
									<dt>Birthday</dt>
									<dd>{{ info.birthday }}</dd>
									<dt>Deathday</dt>
									<dd>{{ info.deathday }}</dd>
									<dt>Homepage</dt>
									<dd><a href="{{ info.homepage }}" target="_blank">{{ info.homepage }}</a></dd>
									<dt>Popularity</dt>
									<dd>{{ info.popularity }}</dd>
									<dt>Biography</dt>
									<dd>{{ info.biography }}</dd>
								</dl>
							</div>
						</div>
						</br>
						<center>
							<div class="row">
								<div class="col-sm-12 pull-left">
									<form class="form-inline" role="form" action="javascript:filterMovies()">
										<div class="form-group">
											<label class="control-label text-primary lead">Movies</label>
											<input id="searchMovieField" type="text" class="form-control" placeholder="Search movie"/>
											<a class="btn btn-default btn-primary" onclick="filterMovies()">Find Movies</a>
											<a class="btn btn-default btn-primary" onclick="showAllMovies()">View All</a>
											<a class="btn btn-default btn-primary" onclick="orderMoviesBy()">Sort By Release Date</a>
										</div>
									</form>
								</div>
							</div>
						</center>
						<br/>
						{% include 'GaeaMoviesInfopelisBundle:Default:movieList.html.twig' with {'movies': movies} %}
						<div id="noMoviesFoundDiv" class='row hidden'>
							<h3 class="text-primary">We're sorry, no movies were found for your seach.</h3>
						</div> 
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/gaeamoviesinfopelis/js/actorDetail.js') }}"></script>
{% endblock %}
